{
  "name": "mycapapp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^8",
    "express": "^4",
    "@sap/xssec": "^4",
    "@cap-js/hana": "^1"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@cap-js/cds-types": "^0.8.0"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mocked",
          "users": {
            "jitendra": {
              "roles": [
                "Viewer"
              ],
              "userAttributes": {
                "BankName": [
                  "My Bank of London"
                ],
                "Country": [
                  "GB"
                ]
              }
            },
            "jitu": {
              "roles": [
                "Viewer",
                "Editor"
              ],
              "userAttributes": {
                "BankName": [
                  "My Bank of London"
                ],
                "Country": [
                  "US",
                  "IN",
                  "JP"
                ]
              }
            }
          }
        }
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  }
}
